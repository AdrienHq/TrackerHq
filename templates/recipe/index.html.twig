{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block adminNav %}{% endblock %}

{% block body %}
    <div>
        <h1 class="mt-4">Toutes les recettes</h1>
        <div class="row">
            {% for recipe in recipes %}
                <div class="col-md-4">
                    <div class="card mt-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.name }}</a>
                            </h5>
                            <div class="text-primary">{{ recipe.description }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="text-right">
        <a href="{{ path('recipe.new') }}" class="btn btn-primary">Cr√©er une recette</a>
    </div>
{% endblock body %}