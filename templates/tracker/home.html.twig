{% extends 'base.html.twig' %}

{% block title %}Tracker{% endblock title %}

{% block adminNav %}{% endblock %}

{% block body %}
    <div class="container-fluid text-center">

        <div class="jumbotron text-center">
            <h1>Bienvenue</h1>
            <p>
                Gràce à tracker vous allez pouvoir gérer votre prise de poids ou régime.
                Nous avons prévu une série d'aliments et de recettes que vous pourrez rajouter 
            </p>
        </div>
        <div class="jumbotron container" style="background-color: white">
            <h2 class="mt-4">Dernière recettes ajoutés</h2>
            <div class="row flex">
                {% for recipe in recipes %}
                    <div class="col-3">
                        <div class="card mt-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.name }}</a>
                                </h5>
                                <p class="card-text">{{ recipe.description }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="jumbotron container" style="background-color: white" >
            <h2 class="mt-4" >Derniers ingrédients ajoutés</h2>
            <div class="row flex">
                {% for ingredient in ingredients %}
                    <div class="col-3"> 
                        <div class="card mt-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('ingredient.show', {id: ingredient.id, slug: ingredient.slug}) }}">{{ ingredient.name }}</a>
                                </h5>
                                <p class="card-text">{{ ingredient.description }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock body %}