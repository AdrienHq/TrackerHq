<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet"
            href="https://bootswatch.com/4/lux/bootstrap.min.css">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            {% if app.user %}
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">User Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="//codeply.com">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Follow-up</a>
                        </li>
                    </ul>
                </div>
            {% endif %}
            <div class="mx-auto order-0">
                <a class="navbar-brand" href="/">Tracker</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            
            <div class="collapse navbar-collapse" id="navbarColor02">
                {% if app.user %}
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu is defined and current_menu == 'ingredients' %}active{% endif %}" href="{{ path('ingredient.index') }}">Ingredients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu is defined and current_menu == 'recipe' %}active{% endif %}" href="{{ path('recipe.index') }}">Recipes</a>
                        </li>
                    </ul>
                {% endif %}
                
                {% if app.user %}
                     <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="{{ path('logout') }}" class="nav-link">Se d√©connecter</a>
                        </li>
                    </ul>
                {% else %}
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="{{ path('inscription') }}" class="nav-link">Inscription</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('login') }}" class="nav-link">Se connecter</a>
                        </li>
                    </ul>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="{{ path('admin.ingredient.index') }}" class="nav-link">Administration</a>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </nav>

        <div>
            {% block adminNav %}
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">User <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('admin.ingredient.index') }}" class="nav-link" >Ingredient</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Recipe</a>
                    </li>
                    </ul>
                </div>
                </nav>
            {% endblock %}
        </div>
                
        <div class="container">
            {% block body %}
            {% endblock %}
        </div>
        <footer>
        </footer>
    </body>
</html>
