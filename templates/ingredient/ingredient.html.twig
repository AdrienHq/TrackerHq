{% extends 'base.html.twig' %}

{% block title %}Ingredients{% endblock %}

{% block adminNav %}{% endblock %}

{% block body %}
    <div>
        <h1 class="mt-4">Ingredients</h1>
    </div>
    <div class="container">
        <div class="row-flex">
            {% for ingredient in ingredients %}
                <div class="col-3">
                    <div class="card mt-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('ingredient.show', {id: ingredient.id, slug: ingredient.slug}) }}">{{ ingredient.name }}</a>
                            </h5>
                            <div class="text-primary">{{ ingredient.description }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="text-right">
        <a href="{{ path('ingredient.new') }}" class="btn btn-primary">Créer un ingrédient</a>
    </div>
{% endblock body %}