{% extends 'base.html.twig' %}

{% block adminNav %}{% endblock %}

{% block body %}
        <div class="jumbotron">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-8">
                    <h1>{% trans from 'messages' %}profile{% endtrans %}</h1>
                </div>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped">
                <tr>
                    <th>{% trans from 'messages' %}profileName{% endtrans %}</th>
                    <td>{{ user.name }} </td>
                </tr>
                <tr>
                    <th>{% trans from 'messages' %}profileFirstname{% endtrans %}</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>{% trans from 'messages' %}profileUsername{% endtrans %}</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>{% trans from 'messages' %}profileWeight{% endtrans %}</th>
                    <td>{{ user.weight }}</td>
                </tr>
                <tr>
                    <th>{% trans from 'messages' %}profileHeight{% endtrans %}</th>
                    <td>{{ user.height }}</td>
                </tr>
                <tr>
                    <th>{% trans from 'messages' %}profileBmr{% endtrans %}</th>
                    <td>{{ user.brm }}</td>
                </tr>
                <tr>
                    <th>{% trans from 'messages' %}profileGender{% endtrans %}</th>
                    <td>{% if (user.gender == 0) %} {{ "Male" }} {% else %} {{ "Female" }} {% endif %} </td>
                </tr>
                <tr>
                    <th>{% trans from 'messages' %}profileActivity{% endtrans %}</th>
                    <td>{% if (user.activity == 0) %} {{ "Sédentaire" }} {% endif %} </td>
                    <td>{% if (user.activity == 1) %} {{ "Actif" }} {% endif %} </td>
                    <td>{% if (user.activity == 2) %} {{ "Très actif" }}  {% endif %} </td>
                    <td>{% if (user.activity == 3) %} {{ "Sportif" }}  {% endif %} </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="text-right">
        <a href="{{ path('user.modify', {id: user.id } ) }}" class="btn btn-primary">{% trans from 'messages' %}profileUpdatePlan{% endtrans %}</a>
    </div>
{% endblock %}

